<form action="/api/books" method="post" id="add_book">
  <div class="new_book">
    <div class="form-group">
      <label for="titulo" class="text-light">Titulo</label>
      <input type="hidden" name="id" value="" />
      <input type="text" name="titulo" placeholder="Digite o titulo do livro" />
    </div>

    <div class="form-group">
      <label for="editora" class="text-light">Editora</label>

      <input
        type="text"
        name="editora"
        placeholder="Digite a editora responsável"
      />
    </div>

    <div class="form-group">
      <label for="anoPublicacao" class="text-light">Ano de Publicação</label>

      <input
        type="text"
        name="anoPublicacao"
        placeholder="Digite o ano da publicação"
      />
    </div>

    <div class="form-group">
      <label for="situacao" class="text-light">Situação</label>
      <div class="radio inline">
        <input type="radio" id="radio-2" name="situacao" value="Disponível" />
        <label for="radio-2" class="radio-label">Disponível</label>
      </div>
      <div class="radio inline">
        <input type="radio" id="radio-3" name="situacao" value="Indisponível" />
        <label for="radio-3" class="radio-label">Indisponível</label>
      </div>
    </div>

    <div class="form-group">
      <button type="submit" class="btn text-dark update">Salvar</button>
    </div>
  </div>
</form>
