<%- include('include/_header')%>

<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex-justify-between">
      <div class="filter">
        <a href="/"><i class="fas fa-angle-double-left"></i> Todos os livros</a>
      </div>
    </div>
    <div class="form-title text-center">
      <h2 class="text-dark">Atualizar informações</h2>
      <span class="text-light">Formulário de atualização</span>
    </div>

    <form method="POST" id="update_book">
      <div class="new_book">
        <div class="form-group">
          <label for="titulo" class="text-light">Titulo</label>
          <input type="hidden" name="id" value="<%= book._id %>" />
          <input
            type="text"
            name="titulo"
            value="<%= book.titulo %>"
            placeholder="Digite o titulo do livro"
          />
        </div>

        <div class="form-group">
          <label for="editora" class="text-light">Editora</label>

          <input
            type="text"
            name="editora"
            value="<%= book.editora %>"
            placeholder="Digite a editora responsável"
          />
        </div>

        <div class="form-group">
          <label for="anoPublicacao" class="text-light"
            >Ano de Publicação</label
          >

          <input
            type="text"
            name="anoPublicacao"
            value="<%= book.anoPublicacao %>"
            placeholder="Digite o ano da publicação"
          />
        </div>

        <div class="form-group">
          <label for="situacao" class="text-light">Situação</label>
          <div class="radio inline">
            <input type="radio" id="radio-2" name="situacao" value="Disponível"
            <%= book.situacao == 'Disponível' ? 'checked' : '' %>>
            <label for="radio-2" class="radio-label">Disponível</label>
          </div>
          <div class="radio inline">
            <input type="radio" id="radio-3" name="situacao"
            value="Indisponível" <%= book.situacao == 'Indisponível' ? 'checked'
            : '' %>>
            <label for="radio-3" class="radio-label">Indisponível</label>
          </div>
        </div>

        <div class="form-group">
          <button type="submit" class="btn text-dark update">Salvar</button>
        </div>
      </div>
    </form>
  </div>
</main>

<%- include('include/_footer')%>
